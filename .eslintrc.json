{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "brace-style": 2,
    "global-require": 0,
    "import/no-dynamic-require": 0,
    "import/prefer-default-export": 0,
    "indent": [
      "error",
      2
    ],
    "max-len": [
      "error",
      {
        "code": 150
      }
    ],
    "no-async-promise-executor": 0,
    "no-param-reassign": 0,
    "semi": [
      2,
      "always",
      {
        "omitLastInOneLineBlock": true
      }
    ]
  }
}